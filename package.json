{
  "name": "store-api-servicedocker",
  "version": "1.0.0",
  "description": "MainStack Backend Engineer Test",
  "author": "Daniel Olumide",
  "license": "ISC",
  "scripts": {
    "start": "ts-node src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "concurrently \"npm run watch\" \"nodemon dist/server.js\"",
    "postinstall": "tsc",
    "watch": "tsc -w",
    "prestart": "npm run build",
    "build": "npm run clean && tsc",
    "clean": "rimraf dist/",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "docker:build": "docker build -t store-api .",
    "docker:run": "docker run -p 3009:3000 store-api",
    "docker:dev": "docker-compose up -d",
    "docker:stop": "docker-compose down"
  },
  "keywords": [
    "store"
  ],
  "dependencies": {
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.17.2",
    "http-status": "^1.7.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^6.0.3",
    "reflect-metadata": "^0.1.13",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^16.10.6",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "eslint-config-standard-with-typescript": "^40.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-promise": "^6.1.1",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
